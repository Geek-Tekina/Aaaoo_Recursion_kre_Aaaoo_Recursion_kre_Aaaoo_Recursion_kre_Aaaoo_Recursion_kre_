TLE - recursion

class Solution {
public:
    bool help (vector<int>&piles,int s,int e,int a,int b){
        if(s>e){
            if( a > b) return 1;
            return 0;
        }
        bool op1 = help(piles,s+1,e,a+piles[s],b);
        bool op2 = help(piles,s,e-1,a,b+piles[e]);

        return op1 | op2;
    }
    bool stoneGame(vector<int>& piles) {
        return help(piles,0,piles.size()-1,0,0);
    }
};
